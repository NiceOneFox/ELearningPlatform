@model CourseOverviewModel
@*model IEnumerable<EpiserverLearningPlatform.Models.ViewModels.CourseModel> *@

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=10">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Overview</title>
    <link rel="shortcut icon" href="online-course.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CurrentPage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentPage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentPage)
        </th>
        <th></th>
    </tr>

    @foreach (var course in Model.Courses)
    {

        <div class="course">
            <img class="course-image" src=@course.CourseImage alt="">
            <div class="course-date">
                <img class="calendar" src="calendar.png" alt="">
                <div class="date">@course.StartDate</div>
                <div class="date">@course.EndDate</div>
            </div>
            <div class="course-name">@course.CourseName</div>
        </div>

    }

</table>

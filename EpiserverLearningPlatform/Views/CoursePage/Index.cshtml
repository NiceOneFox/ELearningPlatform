@using EpiserverLearningPlatform
@model PageViewModel<EpiserverLearningPlatform.Models.Pages.CoursePage>

@using EPiServer.Core
@using EpiserverLearningPlatform
@using EPiServer.Web.Mvc.Html


<style>
    body {
        background-image: url( @Url.ContentUrl(Model.CurrentPage.BackgroundImage) );
        background-repeat: no-repeat;
        background-size: 2400px 800px;
        }
</style>

<style>
    h1 {
        color: white;
        font-size: 3.0em;
        text-transform: uppercase;
        font-family: Arial, Verdana, sans-serif;
        font-weight: 200;
        margin-top: 150px;
        margin-bottom: 100px;
    }
</style>

<head>

</head>

<body>
    <div class="container">
        <div class="row">

            <div class="span7">
                <h1>
                    @Html.PropertyFor(m => m.CurrentPage.CourseName)
                </h1>
            </div>
            <div class="span5">
                <img src="@Url.ContentUrl(Model.CurrentPage.BannerImage)" style="
                         width: 100%;
                         height: 300px;
                         margin-top: 100px;
                         ">
            </div>

        </div>
        <div class="row">
            <div class="span1">
                <img src="@Url.ContentUrl(Model.CurrentPage.CalendarImage)" style="        width: 40px;
                height: 40px;
                margin-bottom: 300px;
                background-position: center right;
                ">
            </div>
            <div class="span3" style="color: white;
                font-size: 1.5em;
                line-height: 30px;
            ">
                @Html.PropertyFor(m => m.CurrentPage.StartDate)
            </div>
            <div class="span3" style="        color: white;
                font-size: 1.5em;
                line-height: 30px;
            ">
                @Html.PropertyFor(m => m.CurrentPage.EndDate)
            </div>
            <div class="span5">
                @*<a class="btn-blue " href=@Url.ContentUrl(Model.CurrentPage.ButtonLink)> Login </a>*@
                <button type="button" style="
                    width: 100%;
                    background-color: #008CBA;
                    font-size: 1.5em;
                    line-height: 26px;
                 ">
                    Login

                </button>
            </div>

        </div>
</body>